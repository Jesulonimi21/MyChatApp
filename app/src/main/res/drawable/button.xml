<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="8dip" />
         <stroke android:width="4dip" android:color="#FFCC0000" />
         <gradient android:angle="-90" android:startColor="#FFCC0000" android:endColor="#689a92"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="8dip" />
         <stroke android:width="4dip" android:color="#FFCC0000" />
         <solid android:color="#FFCC0000"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="8dip" />
         <stroke android:width="4dip" android:color="#FFCC0000" />
         <gradient android:angle="-90" android:startColor="#FFCC0000"
             android:endColor="#FFCC0000" />
     </shape>
 </item>
</selector>